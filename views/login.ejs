<% include ./partials/form_header %>

<div id="container-login" class="row d-flex justify-content-around">
    <h1 style="text-align: center">Login</h1>
    <form action="/login" method="post">
        <div class="form-group">
            <input class="form-control" type="text" name="username" placeholder="username">
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="password">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block" id="form-button">Login</button>
        </div>
    </form>
    <div id="forgot" class="pull-right">
        <a href="/forgot">Forgot Password</a>
    </div>
    <a href="/campgrounds" id="back">Go Back</a>
</div>

<% include ./partials/footer %>